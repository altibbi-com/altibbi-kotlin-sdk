<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="56dp"
    android:paddingBottom="16dp"
    tools:context=".UserPage">

    <!-- Get user by ID -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="User ID"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get User"
        app:layout_constraintTop_toTopOf="@+id/textInputEditText2"
        app:layout_constraintBottom_toBottomOf="@+id/textInputEditText2"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Name and Email -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Name"
        app:layout_constraintTop_toBottomOf="@+id/textInputEditText2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textInputEditText7"
        android:layout_marginEnd="8dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Email"
        app:layout_constraintTop_toBottomOf="@+id/textInputEditText2"
        app:layout_constraintStart_toEndOf="@+id/textInputEditText8"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Insurance and Height -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Insurance ID"
        app:layout_constraintTop_toBottomOf="@+id/textInputEditText8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textInputEditText10"
        android:layout_marginEnd="8dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Height"
        app:layout_constraintTop_toBottomOf="@+id/textInputEditText8"
        app:layout_constraintStart_toEndOf="@+id/textInputEditText9"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- DOB and Policy -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="DOB"
        app:layout_constraintTop_toBottomOf="@+id/textInputEditText9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textInputEditText12"
        android:layout_marginEnd="8dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Policy number"
        app:layout_constraintTop_toBottomOf="@+id/textInputEditText9"
        app:layout_constraintStart_toEndOf="@+id/textInputEditText11"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Internal user id and gender -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText13"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="User ID (for update/create)"
        app:layout_constraintTop_toBottomOf="@+id/textInputEditText11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textInputEditText22"
        android:layout_marginEnd="8dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText22"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Gender (male/female)"
        app:layout_constraintTop_toBottomOf="@+id/textInputEditText11"
        app:layout_constraintStart_toEndOf="@+id/textInputEditText13"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Create / Update user buttons -->
    <Button
        android:id="@+id/button12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Create User"
        app:layout_constraintTop_toBottomOf="@+id/textInputEditText13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Update User"
        app:layout_constraintTop_toBottomOf="@+id/textInputEditText13"
        app:layout_constraintStart_toEndOf="@+id/button12"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Delete user and get all -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="User ID to delete"
        app:layout_constraintTop_toBottomOf="@+id/button12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button11"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Delete User"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Get All Users"
        app:layout_constraintTop_toBottomOf="@+id/button11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
